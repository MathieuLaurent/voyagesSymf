{% extends 'base.html.twig' %}

{% block title %}Hello VoyageController!{% endblock %}

{% block body %}

<section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% for unVoyage in voyages %}
                    <div class="col mb-5">
                        <div class="card h-100">
                        <img src="{{ asset(unVoyage.pic1) }}">
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">{{ unVoyage.name }}</h5>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Voir la liste des voyages</a></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </section>

{% endblock %}
