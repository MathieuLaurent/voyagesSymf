{% extends 'base.html.twig' %}

{% block body %}

    {{form_start(formUser)}}
    <div class="input-group mb-3">
        <span class="input-group-text">Nom et Prénom</span>
        {{ form_widget(formUser.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_widget(formUser.firstname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="input-group mb-3">

            {{ form_label(formUser.email, 'E-Mail', {'label_attr': {'class': 'input-group-text'}}) }}
            {{ form_widget(formUser.email, {'attr': {'class': 'form-control'}}) }}
    
        </div>
    <div class="input-group mb-3">

            {{ form_label(formUser.dateCreation, 'Crée le:', {'label_attr': {'class': 'input-group-text'}}) }}
            {{ form_widget(formUser.dateCreation, {'attr': {'class': 'form-control'}}) }}
    
        </div>
    <div class="input-group mb-3">

            {{ form_label(formUser.picture, 'Photo', {'label_attr': {'class': 'input-group-text'}}) }}
            {{ form_widget(formUser.picture, {'attr': {'class': 'form-control'}}) }}
    
        </div>

    <div class="d-grid gap-2 col-6 mx-auto">

        <input type="submit" value="Modifier" class="btn btn-outline-info">

    </div>
    {{form_end(formUser, {render_rest: false})}}

{% endblock %}
