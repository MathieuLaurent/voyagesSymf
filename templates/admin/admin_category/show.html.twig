{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container">

            <div class="card">
                <div class="card-body"><h2 class="text-center">{{ category.name }}</h2>
                    <hr>
                <p class="card-text">
                    
                    <table class="table table-light table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ category.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ category.name }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ category.description }}</td>
                            </tr>
                        </tbody>
                    </table>

    <div class="text-center">
        <a href="{{ path('admin_category_index') }}"><button type="button" class="btn btn-success btn-sm m-2">Retour à la liste des catégories</button></a>

        <a href="{{ path('admin_category_edit', {'id': category.id}) }}"><button type="button" class="btn btn-outline-info btn-sm m-2">Editer la catégorie</button></a>

        {{ include('admin/admin_category/_delete_form.html.twig') }}
    </div>
{% endblock %}
