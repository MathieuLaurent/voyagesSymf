{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
    <h1>Liste des tags</h1>
    <hr>

    <table class="table table-light table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <div class="text-center">
                        <a href="{{ path('admin_tag_show', {'id': tag.id}) }}"><button type="button" class="btn btn-outline-info btn-sm m-2">Voir</button></a>
                        <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}"><button type="button" class="btn btn-outline-success btn-sm m-2">Editer</button></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_tag_new') }}"><button type="button" class="btn btn-success btn-sm m-2">Cr√©er un nouveau tag</button></a>
{% endblock %}
