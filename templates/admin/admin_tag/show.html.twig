{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }}{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container">

            <div class="card">
                <div class="card-body"><h2 class="text-center">{{ tag.name }}</h2>
                    <hr>
                <p class="card-text">
                    
                    <table class="table table-light table-striped table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ tag.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ tag.name }}</td>
                            </tr>
                        </tbody>
                    </table>

    <div class="text-center">

        <a href="{{ path('admin_tag_index') }}"><button type="button" class="btn btn-success btn-sm m-2">Retour à la liste des catégories</button></a>

        <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}"><button type="button" class="btn btn-outline-info btn-sm m-2">Editer la catégorie</button></a>

        {{ include('admin/admin_tag/_delete_form.html.twig') }}

    </div>
{% endblock %}
